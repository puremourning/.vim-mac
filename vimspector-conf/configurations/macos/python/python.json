{
  "configurations": {
    "run current script": {
      "adapter": "debugpy",
      "variables": {
        "python": {
          "shell": "/bin/bash -c 'test -n \"$${VIRTUAL_ENV}\" && echo $${VIRTUAL_ENV}/bin/python || echo python3'"
        }
      },
      "configuration": {
        "request": "launch",
        "type": "python",
        "cwd": "${CWD:${workspaceRoot\\}}",
        "program": "${file}",
        "stopOnEntry": true,
        "console": "integratedTerminal",
        "args": [ "*${args}" ],
        "python": "${python}"
      },
      "breakpoints": {
        "exception": {
          "raised": "N",
          "uncaught": ""
        }
      }
    },
    "attach": {
      "adapter": "multi-session",
      "configuration": {
        "request": "attach"
      },
      "breakpoints": {
        "exception": {
          "raised": "N",
          "uncaught": ""
        }
      }
    }
  }
}
