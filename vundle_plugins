let g:ycm_clangd_args = get( g:, 'ycm_clangd_args', [] )
call extend( g:ycm_clangd_args, [
      \ '-background-index',
      \ '-completion-style=bundled',
      \ '-pch-storage=memory',
      \ '-j=4',
      \ '--clang-tidy=0',
      \ ] )

nmap <leader>D <Plug>(YCMHover)
augroup CustYCMHover
  autocmd!
  autocmd FileType c,cpp,objc let b:ycm_hover = {
        \ 'command': 'GetDoc',
        \ 'syntax': &syntax
        \ }
augroup END

if g:ycm_use_clangd
  " let g:ycm_clangd_binary_path = get( g:, 'ycm_clangd_binary_path',
  "       \ expand( '$HOME/Development/llvm-project/build/bin/clangd' ) )

  let g:ycm_clangd_binary_path = trim( system( 'brew --prefix llvm' ) )
                               \ . '/bin/clangd'

  if executable( g:ycm_clangd_binary_path )
    call extend( g:ycm_clangd_args, [
          \ '-log=verbose',
          \ '-suggest-missing-includes',
          \ '-header-insertion=iwyu',
          \ ] )
  else
    unlet g:ycm_clangd_binary_path
  endif
endif

